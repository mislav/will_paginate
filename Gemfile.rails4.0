source 'https://rubygems.org'

rails_version = '~> 4.0.13'

gem 'activerecord', rails_version
gem 'actionpack',   rails_version

gem 'rspec', '~> 2.6.0'
gem 'mocha', '~> 0.9.8'

gem 'sqlite3', '~> 1.3.6'

gem 'mysql2', '~> 0.4.6', :group => :mysql
gem 'pg', '~> 0.18.4', :group => :pg

group :development do
